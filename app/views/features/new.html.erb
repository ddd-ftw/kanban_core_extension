<section class="page-header">
  <div class="row">
    <div class="col-md-12">
      <h1>新しい機能をバックログに追加します。</h1>
    </div>
  </div>
</section>
<section class="content">
  <%= form_for @command, url: project_launchings_url do |f| %>
    <%= f.hidden_field :project_id_str %>
    <div class="form-group row">
      <%= f.label :summary, class: 'col-sm-4' %>
      <div class="col-sm-8">
        <%= f.text_field :summary, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :detail, class: 'col-sm-4' %>
      <div class="col-sm-8">
        <%= f.text_area :detail, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-offset-4 col-sm-8">
        <%= f.submit 'Launch new project', class: 'btn btn-primary btn-lg' %>
      </div>
    </div>
  <% end -%>
</section>
