<section class="page-header">
  <div class="row">
    <div class="col-md-8">
      <h1><%= link_to @backlog.project_name, projects_url %> Backlog</h1>
    </div>
    <div class="col-md-4">
      <div class="row">
        <ul class="nav nav-pills pull-right">
          <li class="nav-item">
            <%= link_to(board_url(project_id_str: @backlog.project_id_str), class: 'nav-link') do %>
              <span class="label label-default"><%= @stats.wip %></span>&nbsp;WIP
            <% end -%>
          </li>
          <li class="nav-item">
            <%= link_to(result_url(project_id_str: @backlog.project_id_str), class: 'nav-link') do %>
              <span class="label label-default"><%= @stats.ships %></span>&nbsp;Ships
            <% end -%>
          </li>
        </ul>
      </div>
      <div class="row">
        <div class="col-md-12">
          <%= link_to 'Add feature', new_feature_url(project_id_str: @backlog.project_id_str), class: 'btn btn-secondary pull-right' %>
        </div>
      </div>
    </div>
  </div>
</section>
<section class="content">
  <div class="row">
    <div class="col-md-12">
      <table class="table table-hover ids actions">
        <thead>
          <tr>
            <th>#</th>
            <th>Summary</th>
            <th>Detail</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @backlog.features.each do |feature| %>
            <tr>
              <td><%= feature.number %></td>
              <td><%= feature.summary %></td>
              <td><%= feature.detail %></td>
              <td>
                <%= form_for feature.add_card_command, url: card_addings_url do |f| %>
                  <%= f.hidden_field :project_id_str %>
                  <%= f.hidden_field :feature_id_str %>
                  <%= f.submit 'Todo', class: 'btn btn-primary-outline pull-right' %>
                <% end -%>
              </td>
            </tr>
          <% end -%>
        </tbody>
      </table>
    </div>
  </div>
</section>
