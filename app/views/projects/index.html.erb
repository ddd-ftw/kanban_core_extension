<header class="page">
  <h2>プロジェクト</h2>
  <nav>
    <%= link_to 'Launch new project', new_project_launching_url %>
  </nav>
</header>
<section class="container">
  <div class="wrapper">
    <table class="tables-minimals">
      <thead class="actions">
        <tr>
          <th>Name</th>
          <th>Goal</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @projects.each do |project| %>
          <tr>
            <td><%= project.name %></td>
            <td><%= project.goal %></td>
            <td>
              <%= link_to 'Board', board_url(project.project_id_str) %> |
              <%= link_to 'Backlog', backlog_url(project.project_id_str) %>
            </td>
          </tr>
        <% end -%>
      </tbody>
    </table>
  </div>
</section>
