<section class="page-header">
  <div class="row">
    <div class="col-md-8">
      <h1><%= link_to @backlog.project_name, projects_url %> Backlog</h1>
    </div>
    <div class="col-md-4">
      <%= link_to 'Add feature', new_feature_url(project_id_str: @backlog.project_id_str), class: 'btn btn-secondary pull-right' %>
    </div>
  </div>
</section>
  <div class="statistics">
    <ul>
      <li><%= link_to @stats.wip, board_url(project_id_str: @backlog.project_id_str) %><span>WIP</span></li>
      <li><%= link_to @stats.ships, board_url(project_id_str: @backlog.project_id_str) %><span>Ships</span></li>
    </ul>
  </div>
<section class="content">
  <div class="row">
    <div class="col-md-12">
      <table class="table table-hover ids actions">
        <thead>
          <tr>
            <th>#</th>
            <th>Summary</th>
            <th>Detail</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @backlog.features.each do |feature| %>
            <tr>
              <td><%= feature.id %></td>
              <td><%= feature.summary %></td>
              <td><%= feature.detail %></td>
              <td>
                <%= form_for feature.add_card_command, url: card_addings_url do |f| %>
                  <%= f.hidden_field :project_id_str %>
                  <%= f.hidden_field :feature_id_str %>
                  <%= f.submit 'Todo', class: 'btn btn-primary-outline pull-right' %>
                <% end -%>
              </td>
            </tr>
          <% end -%>
        </tbody>
      </table>
    </div>
  </div>
</section>
