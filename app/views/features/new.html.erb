<header class="main">
  <h1>New Feature<h1>
</header>
<section class="container">
  <div class="wrapper">
    <fieldset>
      <%= simple_form_for @form, url: features_url do |f| %>
        <%= f.hidden_field :project_id_str %>
        <%= f.input :summary %>
        <%= f.input :detail, as: :text, input_html: { rows: 5 } %>
        <%= f.button :submit, 'Add to backlog' %>
      <% end -%>
    </fieldset>
  </div>
</section>
