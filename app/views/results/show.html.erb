<section class="page-header">
  <div class="row">
    <div class="col-md-12">
      <h1><%= link_to @result.project.name, projects_url %> Result</h1>
    </div>
  </div>
</section>
  <div class="statistics">
    <ul>
      <li><%= link_to @stats.backlogs, backlog_url(project_id_str: @result.project.project_id_str) %><span>Backlogs</span></li>
      <li><%= link_to @stats.wip, board_url(project_id_str: @result.project.project_id_str) %><span>WIP</span></li>
    </ul>
  </div>
<section class="content">
  <div class="row">
    <div class="col-md-12">
      <table class="table table-hover ids">
        <thead>
          <tr>
            <th>#</th>
            <th>Summary</th>
            <th>Detail</th>
            <th>Lead time (hours)</th>
          </tr>
        </thead>
        <tbody>
          <% @result.shipped_features.each do |feature| %>
            <tr>
              <td><%= feature.id %></td>
              <td><%= feature.summary %></td>
              <td><%= feature.detail %></td>
              <td><%= feature.lead_time %></td>
            </tr>
          <% end -%>
        </tbody>
      </table>
    </div>
  </div>
</section>
