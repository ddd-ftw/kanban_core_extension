<section class="page-header">
  <div class="row">
    <div class="col-md-8">
      <h1><%= link_to @board.project_name, projects_url %> Board</h1>
    </div>
    <div class="col-md-4">
      <ul class="nav nav-pills pull-right">
        <li class="nav-item">
          <%= link_to(backlog_url(project_id_str: @board.project_id_str), class: 'nav-link') do %>
            <span class="label label-default"><%= @stats.backlogs %></span>&nbsp;Backlogs
          <% end -%>
        </li>
        <li class="nav-item">
          <%= link_to(result_url(project_id_str: @board.project_id_str), class: 'nav-link') do %>
            <span class="label label-default"><%= @stats.ships %></span>&nbsp;Ships
          <% end -%>
        </li>
      </ul>
    </div>
  </div>
</section>
<section class="content">
  <div class="row">
    <div class="col-md-12">
      <table class="kanban table">
        <%= render partial: 'header',
          locals: { phases: @board.header.phases, phase_states: @board.header.phase_states }
        %>
        <%= render partial: 'body',
          locals: { phase_states: @board.header.phase_states, body: @board.body }
        %>
      </table>
    </div>
  </div>
</div>
