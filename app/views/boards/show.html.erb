<section class="page-header">
  <div class="row">
    <div class="col-md-12">
      <h1><%= link_to @board.project_name, projects_url %> Board</h1>
    </div>
  </div>
</section>
  <div class="statistics">
    <ul>
      <li><%= link_to @stats.backlogs, backlog_url(project_id_str: @board.project_id_str) %><span>Backlogs</span></li>
      <li><%= link_to @stats.ships, result_url(project_id_str: @board.project_id_str) %><span>Ships</span></li>
    </ul>
  </div>
<section class="content">
  <div class="row">
    <div class="col-md-12">
      <table class="kanban table">
        <%= render partial: 'header',
          locals: { phases: @board.header.phases, phase_states: @board.header.phase_states }
        %>
        <%= render partial: 'body',
          locals: { phase_states: @board.header.phase_states, body: @board.body }
        %>
      </table>
    </div>
  </div>
</div>
